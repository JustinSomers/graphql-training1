{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@monolith/*": ["../monolith/*"]
    }
  },
  "include": ["**/*.ts"]
}
